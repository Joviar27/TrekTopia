<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="52dp"
    android:layout_height="50dp"
    android:background="@drawable/bg_common_8"
    android:backgroundTint="?attr/colorSecondary"
    android:paddingHorizontal="11dp"
    android:paddingVertical="6dp"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:id="@+id/tv_activity_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TitleMedium.SemiBold.White"
        tools:text="99K"
        android:maxLines="1"/>
    
    <TextView
        android:id="@+id/tv_info_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/LabelSmall.White"
        tools:text="@string/steps"/>
</LinearLayout>