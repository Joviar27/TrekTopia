<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="?attr/actionBarSize"
    tools:context=".ui.leaderboard.LeaderboardFragment">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:background="@drawable/tophome_secondarycontainer_16"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/leaderboard"
        android:textAppearance="@style/HeadlineMedium.Black.OnSecondaryContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_bronze"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginStart="52dp"
        android:layout_marginBottom="18dp"
        app:layout_constraintBottom_toBottomOf="@+id/bronze"
        app:layout_constraintStart_toStartOf="parent"
        tools:src="@tools:sample/avatars" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:visibility="invisible"
        android:id="@+id/bronze"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/ic_stars_24"
        android:backgroundTint="@color/bronze"
        app:layout_constraintBottom_toTopOf="@+id/tv_name_bronze"
        app:layout_constraintEnd_toEndOf="@+id/tv_name_bronze"
        app:layout_constraintStart_toStartOf="@+id/tv_name_bronze" />

    <TextView
        android:id="@+id/tv_name_bronze"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="100dp"
        android:maxLines="1"
        android:textAppearance="@style/TitleLarge.SemiBold.OnSecondaryContainer"
        app:layout_constraintBottom_toTopOf="@+id/tv_point_bronze"
        app:layout_constraintEnd_toEndOf="@+id/iv_bronze"
        app:layout_constraintStart_toStartOf="@+id/iv_bronze"
        tools:text="Waluyo" />

    <TextView
        android:id="@+id/tv_point_bronze"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TitleMedium.SemiBold.OnSecondaryContainer"
        app:layout_constraintBottom_toBottomOf="@+id/tv_point_gold"
        app:layout_constraintEnd_toEndOf="@+id/tv_name_bronze"
        app:layout_constraintStart_toStartOf="@+id/tv_name_bronze"
        tools:text="50000" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_gold"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toStartOf="@+id/iv_silver"
        app:layout_constraintStart_toEndOf="@+id/iv_bronze"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        tools:src="@tools:sample/avatars" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:visibility="invisible"
        android:id="@+id/gold"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/ic_stars_24"
        android:backgroundTint="@color/gold"
        app:layout_constraintEnd_toEndOf="@+id/iv_gold"
        app:layout_constraintStart_toStartOf="@+id/iv_gold"
        app:layout_constraintTop_toTopOf="@+id/iv_gold" />

    <TextView
        android:id="@+id/tv_name_gold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:maxWidth="100dp"
        android:maxLines="1"
        android:textAppearance="@style/TitleLarge.SemiBold.OnSecondaryContainer"
        app:layout_constraintEnd_toEndOf="@+id/iv_gold"
        app:layout_constraintStart_toStartOf="@+id/iv_gold"
        app:layout_constraintTop_toBottomOf="@+id/gold"
        tools:text="Jessica" />

    <TextView
        android:id="@+id/tv_point_gold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TitleMedium.SemiBold.OnSecondaryContainer"
        app:layout_constraintEnd_toEndOf="@+id/tv_name_gold"
        app:layout_constraintStart_toStartOf="@+id/tv_name_gold"
        app:layout_constraintTop_toBottomOf="@+id/tv_name_gold"
        tools:text="150000" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_silver"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="18dp"
        app:layout_constraintBottom_toBottomOf="@+id/silver"
        app:layout_constraintEnd_toEndOf="parent"
        tools:src="@tools:sample/avatars" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:visibility="invisible"
        android:id="@+id/silver"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/ic_stars_24"
        android:backgroundTint="@color/silver"
        app:layout_constraintBottom_toTopOf="@+id/tv_name_silver"
        app:layout_constraintEnd_toEndOf="@+id/tv_name_silver"
        app:layout_constraintStart_toStartOf="@+id/tv_name_silver" />

    <TextView
        android:id="@+id/tv_name_silver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="100dp"
        android:maxLines="1"
        android:textAppearance="@style/TitleLarge.SemiBold.OnSecondaryContainer"
        app:layout_constraintBottom_toTopOf="@+id/tv_point_silver"
        app:layout_constraintEnd_toEndOf="@+id/iv_silver"
        app:layout_constraintStart_toStartOf="@+id/iv_silver"
        tools:text="Sumiyem" />

    <TextView
        android:id="@+id/tv_point_silver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TitleMedium.SemiBold.OnSecondaryContainer"
        app:layout_constraintBottom_toBottomOf="@+id/tv_point_gold"
        app:layout_constraintEnd_toEndOf="@+id/tv_name_silver"
        app:layout_constraintStart_toStartOf="@+id/tv_name_silver"
        tools:text="50000" />

    <include
        android:id="@+id/item_current_user"
        layout="@layout/item_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/view" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_leaderboard"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingHorizontal="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_current_user"
        tools:listitem="@layout/item_user"/>

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/pb_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminate="true"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/rv_leaderboard"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>